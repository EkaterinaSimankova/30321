@{
    Layout = "_Layout";
}

@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Dictionary<int,Simankova.Domain.Models.CartItem>

<!-- список объектов -->
@if (Model.Count == 0)
{
    <h2 class="m-2">Корзина пуста</h2>
}
else
{
    <h2 class="m-2">Ваша корзина:</h2>
 <table class="table table-striped">
    @foreach (var item in Model)
    {
        <tr>
                <td><img src=@($"https://localhost:7002/{@item.Value.Product.Image}") width="200" /></td>
        <td>@item.Value.Product.Name</td>
        <td>@item.Value.Product.Description</td>
        <td>@item.Value.Amount</td>
        <td><a class="btn btn-danger"
               asp-action="Remove"
               asp-controller="cart"
               asp-route-id="@item.Value.Product.Id">
    <i class="fas fa-trash"></i></a>
</td></tr>
    }
 </table>
}
